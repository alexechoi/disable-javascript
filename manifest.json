{
  "manifest_version": 2,
  "name": "Toggle JavaScript",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "contentSettings"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
